<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/editText2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ems="10"
            android:hint="tulis pesan di sini"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="Send" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/button"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:background="#E91E63"
            android:padding="10dp"
            android:text="ok di tunggu mas"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignBottom="@id/textView2"
            android:layout_alignParentBottom="false"
            android:layout_toLeftOf="@id/textView2"
            android:padding="10dp"
            android:src="@drawable/lucinta" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_above="@id/imageView4"
            android:padding="10dp"
            android:src="@drawable/asu" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView5"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@id/imageView5"
            android:background="#4CAF50"
            android:padding="10dp"
            android:text="oteweeeeeeee"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/imageView5"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:background="#E91E63"
            android:padding="10dp"
            android:text="sininkos dulu"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignBottom="@id/textView5"
            android:layout_toLeftOf="@id/textView5"
            android:padding="10dp"
            android:src="@drawable/lucinta" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_above="@id/imageView6"
            android:padding="10dp"
            android:src="@drawable/asu" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView7"
            android:layout_alignParentRight="false"
            android:layout_toEndOf="@id/imageView7"
            android:background="#4CAF50"
            android:padding="10dp"
            android:text="kuy makan"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/imageView7"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:layout_marginRight="10dp"
            android:background="#E91E63"
            android:padding="10dp"
            android:text="di kos,sini wae"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignBottom="@id/textView7"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_toLeftOf="@id/textView7"
            android:padding="10dp"
            android:src="@drawable/lucinta" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_above="@id/imageView8"
            android:layout_alignParentRight="false"
            android:padding="10dp"
            android:src="@drawable/asu" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView9"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="-1dp"
            android:layout_toEndOf="@id/imageView9"
            android:background="#4CAF50"
            android:padding="10dp"
            android:text="cin koe neng di"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
